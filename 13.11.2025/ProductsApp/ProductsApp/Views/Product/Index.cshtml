@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Code</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7">There are currently no products available</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Code</td>
                    <td>
                        <a asp-action="EditPrice" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            Edit Price
                        </a>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                              style="display:inline-block">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add Product</a>