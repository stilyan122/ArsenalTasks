@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="p-4" style="background-color:#b0e0e6;">
    <h2>Employees:</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Add employee</a>
    </p>

    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Date of birth</th>
                <th>Department name</th>
                <th>Department code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>
                    <td>@item.DateOfBirth.ToString("dd-MM-yyyy")</td>
                    <td>@item.Department?.Name</td>
                    <td>@item.Department?.Code</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>

                        <form asp-action="Delete"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this employee?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
